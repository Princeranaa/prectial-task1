<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Admin Dashboard</title>
  </head>
  <body class="bg-gray-100 flex">
    <!-- Sidebar -->
    <aside class="w-64 bg-gray-900 text-white min-h-screen p-5 space-y-6">
      <h2 class="text-2xl font-bold text-center">Admin Panel</h2>
      <nav class="space-y-2">
        <a href="#" class="block px-4 py-2 rounded-lg hover:bg-gray-700"
          >üè† Dashboard</a
        >
        <a
          href="/api/admin/user/list"
          class="block px-4 py-2 rounded-lg hover:bg-gray-700"
          >üë• User List</a
        >
        <a href="#" class="block px-4 py-2 rounded-lg hover:bg-gray-700"
          >‚öôÔ∏è Settings</a
        >
        <a
          href="/api/admin/logout"
          class="block px-4 py-2 rounded-lg hover:bg-gray-700 text-red-400"
          >üö™ Logout</a
        >
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6">
      <!-- Header -->
      <header
        class="flex justify-between items-center p-4 bg-white shadow-md rounded-lg"
      >
        <h1 class="text-2xl font-semibold">Dashboard</h1>
        <div class="flex items-center space-x-4">
          <span class="text-gray-600">üë§ Welcome Admin</span>
          <img
            src="https://images.unsplash.com/photo-1615109398623-88346a601842?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTZ8fG1hbnxlbnwwfHwwfHx8MA%3D%3D"
            alt="Admin"
            class="w-10 h-10 object-cover rounded-full"
          />
        </div>
      </header>

      <!-- Stats Cards -->
      <div class="stats-section grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Active Users Card -->
        <div class="bg-green-600 rounded-lg p-6 shadow-lg">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-green-100">Active Users</p>
              <h3 class="text-3xl font-bold text-white"><%= stats.activeUsers %></h3>
            </div>
            <div class="bg-green-500 rounded-full p-3">
              <i class="fas fa-users text-2xl text-white"></i>
            </div>
          </div>
        </div>

        <!-- Inactive Users Card -->
        <div class="bg-yellow-600 rounded-lg p-6 shadow-lg">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-yellow-100">Inactive Users</p>
              <h3 class="text-3xl font-bold text-white"><%= stats.inactiveUsers %></h3>
            </div>
            <div class="bg-yellow-500 rounded-full p-3">
              <i class="fas fa-user-clock text-2xl text-white"></i>
            </div>
          </div>
        </div>

        <!-- Total Users Card -->
        <div class="bg-blue-600 rounded-lg p-6 shadow-lg">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-blue-100">Total Users</p>
              <h3 class="text-3xl font-bold text-white"><%= stats.totalUsers %></h3>
            </div>
            <div class="bg-blue-500 rounded-full p-3">
              <i class="fas fa-users-cog text-2xl text-white"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- User Management -->
      <div class="mt-8">
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold mb-4">User Management</h2>
          <div class="overflow-x-auto">
            <table class="min-w-full table-auto">
              <thead class="bg-gray-100">
                <tr>
                  <th class="px-6 py-3 text-left">Name</th>
                  <th class="px-6 py-3 text-left">Email</th>
                  <th class="px-6 py-3 text-left">Status</th>
                  <th class="px-6 py-3 text-left">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user => { %>
                  <tr class="border-b">
                    <td class="px-6 py-4"><%= user.name %></td>
                    <td class="px-6 py-4"><%= user.email %></td>
                    <td class="px-6 py-4">
                      <span class="px-2 py-1 rounded-full text-sm <%= user.status === 'Active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= user.status %>
                      </span>
                    </td>
                    <td class="px-6 py-4">
                      <button 
                        onclick="toggleUserStatus('<%= user._id %>', '<%= user.status %>')"
                        class="px-4 py-2 rounded-lg <%= user.status === 'Active' ? 'bg-red-500 hover:bg-red-600' : 'bg-green-500 hover:bg-green-600' %> text-white"
                      >
                        <%= user.status === 'Active' ? 'Deactivate' : 'Activate' %>
                      </button>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <!-- Add this right before closing </body> tag -->
    <script>
      async function toggleUserStatus(userId, currentStatus) {
        try {
          const newStatus = currentStatus === 'Active' ? 'Inactive' : 'Active';
          const response = await fetch('/api/admin/user/update-status', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              userId: userId,
              status: newStatus
            })
          });

          const data = await response.json();
          if (data.success) {
            // Reload the page to update the stats
            window.location.reload();
          } else {
            alert('Error updating user status');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error updating user status');
        }
      }
    </script>
  </body>
</html>
